<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/d_14"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.joe.root.widget.HeightEqualImageView
        android:id="@+id/iv_umc_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_umc_image_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:layout_below="@+id/iv_umc_image"
        android:paddingLeft="@dimen/d_24"
        android:paddingRight="@dimen/d_24">

        <TextView
            android:id="@+id/tv_umc_photo_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/title"
            android:textSize="@dimen/s_16"
            tools:text="aaaa" />

    </RelativeLayout>

    <View
        android:id="@+id/feed_result_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_umc_image_share"
        android:layout_marginLeft="@dimen/d_24"
        android:layout_marginRight="@dimen/d_24"
        android:background="@color/grey" />
    <TextView
        android:id="@+id/tv_umc_title"
        android:layout_below="@+id/feed_result_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/d_24"
        android:layout_marginRight="@dimen/d_24"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/s_20"
        android:textColor="@color/title"
        tools:text="6 Smart Ways To Deal With A Negative Pregnacy Test"/>
</RelativeLayout>