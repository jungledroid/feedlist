<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/d_14"
    android:paddingTop="@dimen/d_2"
    android:paddingLeft="@dimen/d_24"
    android:paddingRight="@dimen/d_24">


    <TextView
        android:id="@+id/tv_umc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/s_32"
        android:textColor="@color/title"
        tools:text="6 Smart Ways To Deal With A Negative Pregnacy Test"/>

    <TextView
        android:id="@+id/tv_umc_subtitle"
        android:layout_below="@+id/tv_umc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10"
        android:textSize="@dimen/s_16"
        android:textColor="@color/title"
        tools:text="Talk about it-event if it to yourself"/>

    <TextView
        android:id="@+id/tv_umc_article"
        android:layout_below="@+id/tv_umc_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:lineSpacingMultiplier="1.5"
        android:textSize="@dimen/s_16"
        android:textColor="@color/title"
        tools:text="Talk about it-event if it to yourself"/>

    <TextView
        android:id="@+id/tv_photo_credit_prefix"
        android:layout_below="@+id/tv_umc_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:text="photos"/>

    <TextView
        android:id="@+id/tv_umc_photo_credit"
        android:layout_below="@+id/tv_umc_article"
        android:layout_toRightOf="@+id/tv_photo_credit_prefix"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        tools:text="photos"/>


    <View
        android:id="@+id/feed_result_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_umc_photo_credit"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/d_14"/>

    <TextView
        android:id="@+id/feed_result_close"
        android:layout_below="@+id/feed_result_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:textColor="@color/vote_boarder"
        android:textSize="@dimen/s_16"
        android:text="关闭"
        />
</RelativeLayout>