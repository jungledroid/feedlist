<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_percent_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d_12"
    android:paddingRight="@dimen/d_12"
    android:paddingTop="@dimen/d_10"
    android:paddingBottom="@dimen/d_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_32"
        android:weightSum="100"
        android:background="@drawable/progress_percent_rest_shape"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_vote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:background="@color/vote_selected" />

        <ImageView
            android:id="@+id/iv_rest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_feed_vote_name"
        android:layout_below="@+id/d_gate_page_subtitle_bottom_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="@dimen/s_16"
        tools:text="Names"
        />
</LinearLayout>