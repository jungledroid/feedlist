<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/fab_margin"
    android:paddingBottom="@dimen/fab_margin">
    <TextView
        android:id="@+id/tv_feed_poll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/d_32"
        android:layout_marginRight="@dimen/d_32"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/title"
        android:textSize="@dimen/s_20"
        tools:text="vote: title"/>
    <com.joe.root.widget.ChoiceListLayout
        android:id="@+id/tv_feed_choice_list"
        android:layout_below="@+id/tv_feed_poll_title"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
    />

</RelativeLayout>